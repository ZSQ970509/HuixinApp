<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/actionbar_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150"
        android:background="#f2f2f2">

        <TextView
            android:id="@+id/textView_Auto_Result_Project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="#000"
            android:textSize="@dimen/y32"
            android:layout_marginTop="@dimen/y20"
            android:layout_marginLeft="@dimen/x20"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_Auto_Result_Project"
            android:layout_margin="@dimen/x20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_Auto_Result_Install"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="安装情况：4/8"
                android:textSize="@dimen/y24"
                android:textColor="#000" />

            <TextView
                android:id="@+id/textView_Auto_Result_Acceptance"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="已上传验收单：4"
                android:textSize="@dimen/y24"
                android:textColor="#000" />

            <TextView
                android:id="@+id/textView_Auto_Result_Distance"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:gravity="right"
                android:text="0.01KM"
                android:textSize="@dimen/y24"
                android:textColor="#000" />
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150"
        android:background="#fff">

        <TextView
            android:id="@+id/textView_Auto_Result_Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="#000"
            android:textSize="@dimen/y28"
            android:layout_marginTop="@dimen/y20"
            android:layout_marginLeft="@dimen/x20"
            android:text="验收时间：2018-12-18  14:16:22" />

        <TextView
            android:id="@+id/textView16"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView_Auto_Result_Time"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView_Auto_Result_Time"
            android:drawableLeft="@drawable/autojinggao"
            android:drawablePadding="@dimen/y5"
            android:text="本次自动验收信息已自动同步到系统后台"
            android:textColor="#000"
            android:layout_marginBottom="@dimen/y10"
            android:textSize="@dimen/y26" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableTop="@drawable/autocall"
            android:textColor="#000"
            android:textSize="@dimen/y26"
            android:layout_marginRight="@dimen/x20"
            android:text="联系管理员" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="#ccc" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150"
        android:background="#fff">


        <TextView
            android:id="@+id/textView18"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:textColor="#000"
            android:textSize="@dimen/y32"
            android:gravity="center"
            android:text="设备名称" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:textColor="#000"
            android:textSize="@dimen/y32"
            android:gravity="center"
            android:text="视频" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:textColor="#000"
            android:textSize="@dimen/y32"
            android:gravity="center"
            android:text="激光" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:textColor="#000"
            android:textSize="@dimen/y32"
            android:gravity="center"
            android:text="云台" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_Auto_Result_Driver_List"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>