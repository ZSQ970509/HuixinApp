<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searchdialog"
    android:layout_width="400dp"
    android:layout_height="match_parent"
   
    android:orientation="vertical" >

    <TextView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/dialog_top"
        android:focusable="true"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="   请输入要搜索的条例内容" />

    
        <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal" >
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tvname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="内容："
            android:textColor="@color/black" />

       <EditText
            android:id="@+id/etname"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:hint="输入内容"
     		android:background="@drawable/xiahuaxian"
            android:textColor="#737585" />

        <Button
            android:id="@+id/search"
            style="@style/ButtonDefaultStyle"
            android:layout_width="46dp"
            android:layout_height="26dp"
            android:text="搜索" />
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bottom"
        android:gravity="center"
                 
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_cancel"
           
            style="@style/ButtonDialogCanceltStyle"
            android:textColor="@color/white"
            android:layout_width="55dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="取消" />
    </LinearLayout>

</LinearLayout>