<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.king.photo.activity.LadderControlDeviceScanMessage" >

    <LinearLayout
        android:id="@+id/main_top"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#363a52" >
		<LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

			<ImageButton
			    android:id="@+id/regulatory_back"
			    android:layout_width="45dip"
			    android:layout_height="45dip"
			    android:layout_gravity="center_vertical"
			    android:background="@android:color/transparent"
			    android:src="@drawable/btn_back"
			    android:textColor="@android:color/white" />

          </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
           android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/bind_driver_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人员信息"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
             android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
             android:gravity="right|center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                 android:id="@+id/LinearLayout_upload_humen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:background="#ffffff"
                android:layout_marginRight="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传"
                    android:textColor="#363a52"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:text="@string/humen_name"
                        android:textColor="#737585" />

                    <TextView
                        android:id="@+id/text_humen_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="5dip"
                        android:singleLine="true"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:text="@string/humen_idnum"
                        android:textColor="#737585" />

                    <TextView
                        android:id="@+id/text_humen_idnum"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="5dip"
                        android:singleLine="true"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                   android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:text="@string/humen_qualification_certificate"
                        android:textColor="#737585" />

                    <TextView
                        android:id="@+id/text_humen_qualification_certificate"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="5dip"
                        android:singleLine="true"
                        android:textSize="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                   android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:text="@string/humen_phone"
                        android:textColor="#737585" />

                    <TextView
                        android:id="@+id/text_humen_phone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="5dip"
                        android:singleLine="true"
                        android:textSize="15dp" />
                </LinearLayout>
				<LinearLayout
                    android:layout_width="fill_parent"
                   android:layout_height="50dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:text="@string/humen_project"
                        android:textColor="#737585" />

                    <TextView
                        android:id="@+id/text_humen_project"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:paddingLeft="5dip"
                        android:singleLine="true"
                        android:textSize="15dp" />
                </LinearLayout>
				<LinearLayout
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="vertical" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:text="@string/frist_image"
                        android:textColor="#737585" />
				<LinearLayout
				    android:layout_width="fill_parent"
				    android:layout_height="150dp"
				    android:gravity="center"
				    android:orientation="vertical" >
                    <ImageView
                        android:id="@+id/frist_imageView"
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/about_1" />
                </LinearLayout>
                </LinearLayout>
                <LinearLayout
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:text="@string/second_image"
                        android:textColor="#737585" />
				<LinearLayout
				    android:layout_width="fill_parent"
				    android:layout_height="150dp"
				    android:gravity="center"
				    android:orientation="vertical" >
                    <ImageView
                        android:id="@+id/sencond_imageView"
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/about_1" />
                </LinearLayout>
                </LinearLayout>
                <LinearLayout
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="22dp"
                        android:text="@string/thrid_image"
                        android:textColor="#737585" />
				<LinearLayout
				    android:layout_width="fill_parent"
				    android:layout_height="150dp"
				    android:gravity="center"
				    android:orientation="vertical" >
                    <ImageView
                        android:id="@+id/third_imageView"
                        android:layout_width="120dp"
                        android:layout_height="150dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/about_1" />
                </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
					android:layout_height="100dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_upload_humen"
                        style="@style/ButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="50dip"
                        android:layout_marginTop="10dp"
                        android:text="@string/uploadhuman"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>

    </ScrollView>
</LinearLayout>