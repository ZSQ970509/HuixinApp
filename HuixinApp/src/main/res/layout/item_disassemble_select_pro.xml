<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_bg"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvItemDisassembleProjectName"
            style="@style/tvRollStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目名称"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvItemDisassembleNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvItemDisassembleProjectName"
            android:layout_marginTop="8dp"
            android:text="未拆机数量："
            android:textColor="#656d78" />

        <TextView
            android:id="@+id/tvItemDisassembleDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvItemDisassembleNum"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="-1km"
            android:textColor="#4a89dc" />
    </RelativeLayout>
</RelativeLayout>