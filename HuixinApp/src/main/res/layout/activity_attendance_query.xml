<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white" >

    <RelativeLayout
        android:id="@+id/attendance_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#363a52"
        android:gravity="center_vertical"
        android:padding="10dip" >

        <ImageButton
            android:id="@+id/attendance_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:paddingBottom="5dip"
            android:paddingLeft="5dip"
            android:paddingRight="50dip"
            android:paddingTop="5dip"
            android:src="@drawable/btn_back_bg" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/title_attendance_manager"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/attendance_top"
        android:orientation="vertical"
        android:padding="10dip" >

        <TextView
            android:id="@+id/attendance_notice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dip"
            android:background="@drawable/btn_bg"
            android:drawableLeft="@drawable/feature_point_cur"
            android:drawablePadding="5dip"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="考勤提醒"
            android:textColor="@color/btn_normal"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/attendance_detail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dip"
            android:background="@drawable/btn_bg"
            android:drawableLeft="@drawable/feature_point_cur"
            android:drawablePadding="5dip"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="考勤明细"
            android:textColor="@color/btn_normal"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/attendance_day"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dip"
            android:background="@drawable/btn_bg"
            android:drawableLeft="@drawable/feature_point_cur"
            android:drawablePadding="5dip"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="考勤日报"
            android:textColor="@color/btn_normal"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/attendance_month"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dip"
            android:background="@drawable/btn_bg"
            android:drawableLeft="@drawable/feature_point_cur"
            android:drawablePadding="5dip"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="考勤月报"
            android:textColor="@color/btn_normal"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/attendance_mobile"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_bg"
            android:drawableLeft="@drawable/feature_point_cur"
            android:drawablePadding="5dip"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="移动考勤"
            android:textColor="@color/btn_normal"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/attendance_path"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_bg"
            android:drawableLeft="@drawable/feature_point_cur"
            android:drawablePadding="5dip"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:text="考勤路径"
            android:textColor="@color/btn_normal"
            android:textSize="22sp" />
    </LinearLayout>

</RelativeLayout>