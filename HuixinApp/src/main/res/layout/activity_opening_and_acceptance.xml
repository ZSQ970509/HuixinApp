<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/actionbar_layout" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150"
        android:background="#f2f2f2">

        <TextView
            android:id="@+id/textView_Opening_And_Acceptance_Project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="#000"
            android:textSize="@dimen/y32"
            android:layout_marginTop="@dimen/y20"
            android:layout_marginLeft="@dimen/x20"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_Opening_And_Acceptance_Project"
            android:layout_margin="@dimen/x20"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_Opening_And_Acceptance_Install"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="安装情况：4/8"
                android:textSize="@dimen/y24"
                android:textColor="#000" />

            <TextView
                android:id="@+id/textView_Opening_And_Acceptance_Acceptance"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="已上传验收单：4"
                android:textSize="@dimen/y24"
                android:textColor="#000" />

            <TextView
                android:id="@+id/textView_Opening_And_Acceptance_Distance"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:gravity="right"
                android:text="0.01KM"
                android:textSize="@dimen/y24"
                android:textColor="#000" />
        </LinearLayout>

    </RelativeLayout>
    <Button
        android:id="@+id/button_Opening_And_Acceptance_Opening"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:text="安装开通"
        android:textSize="@dimen/y32"
        android:layout_margin="@dimen/x20"/>
    <Button
        android:id="@+id/button_Opening_And_Acceptance_Acceptance"
        style="@style/ButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:text="上传安装验收单"
        android:textSize="@dimen/y32"
        android:layout_margin="@dimen/x20"/>

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:textColor="#000"
        android:textSize="@dimen/y32"
        android:layout_marginTop="@dimen/y20"
        android:layout_marginLeft="@dimen/x20"
        android:text="安装开通记录"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="#ccc"
        android:layout_marginTop="@dimen/y20"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_Opening_And_Acceptance_Record"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>