<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#e6e6e6"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.9"
        android:background="@drawable/shape_corner_10_fortowercranemanager"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="33dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_tower_crane_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="人员:"
                android:textColor="#3d3d3d"
                android:textSize="16sp" >
            </TextView>

            <TextView
                android:id="@+id/item_tower_crane_name"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_toRightOf="@+id/item_tower_crane_name_txt"
                android:gravity="center"
                android:text="小谢"
                android:textColor="#3d3d3d"
                android:textSize="16sp" >
            </TextView>

            <TextView
                android:id="@+id/item_tower_crane_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:text="待审核"
                android:textColor="#fa9d4c"
                android:textSize="12sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:orientation="horizontal"
   
             >

            <ImageView
                android:id="@+id/item_image_1"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_marginLeft="28dp"
                android:layout_marginTop="20dp" />

            <ImageView
                android:id="@+id/item_image_2"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="20dp" />

            <ImageView
                android:id="@+id/item_image_3"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="20dp" />

            <ImageView
                android:id="@+id/item_image_4"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="20dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_tower_crane_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#3d3d3d" />

            <Button
                android:id="@+id/btn_denied"
                style="@style/ButtonTowerCraneDeniedStyle"
                android:layout_width="60dp"
                android:layout_height="23dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/btn_pass"
                android:text="不通过" />

            <Button
                android:id="@+id/btn_pass"
                style="@style/ButtonTowerCranePassStyle"
                android:layout_width="60dp"
                android:layout_height="23dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="40dp"
                android:text="通过" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>